<context $req_lang == "es"> <!-- A regular context -->
  <input id="greeting" pattern="* recuerda [me] $Text">
    <output value="Hechi!" if="full($Text)"/>

    <context if="empty($Text)" modal="true"> <!-- A modal context -->
      <output value="Que te gustaria que te recuerde?"/>

      <input pattern="$Text">
        <output value="Hecho!"/>
      </input>

    </context>
  </input>
</context>
